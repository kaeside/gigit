{
  "name": "gigit",
  "version": "1.0.0",
  "description": "Hub for people that do. Connect businesses with their clients.",
  "main": "./jsx/index.jsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaeside/gigit.git"
  },
  "scripts": {
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:jsx && npm run build:css",
    "clean": "rm -rf public",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:jsx",
    "test": "mocha --compilers js:babel-register test/**/*.js*",
    "start": "nodemon ./data/app.js",
    "mkdir": "mkdir -p public && mkdir -p public/css",
    "build:html": "npm run clean:html && cp index.html public/",
    "clean:html": "rm -f public/index.html",
    "watch:html": "npm run build:html && chokidar index.html -c 'npm run build:html'",
    "build:js": "npm run clean:js && webpack",
    "clean:js": "rm -f build/$npm_package_name.$npm_package_version.js build/$npm_package_name.$npm_package_version.js.map",
    "watch:js": "npm run build:js && webpack --watch",
    "build:css": "npm run clean:css && cp css/style.css public/css ",
    "clean:css": "rm public/css/style.css",
    "watch:css": "public/css --watch",
    "build:jsx": "npm run clean:jsx && webpack",
    "clean:jsx": "rm -f build/$npm_package_name.$npm_package_version.jsx build/$npm_package_name.$npm_package_version.jsx.map",
    "watch:jsx": "npm run build:jsx && webpack --watch"
  },
  "author": "Kaeside Iwuagwu",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "6.10.4",
    "babel-loader": "6.2.4",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.11.1",
    "babel-register": "6.9.0",
    "chokidar-cli": "^1.2.0",
    "http-server": "^0.9.0",
    "nodemon": "1.9.2",
    "react-addons-test-utils": "15.2.1",
    "webpack": "1.13.1",
    "webpack-dev-server": "1.14.1"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "mongodb": "^2.2.1",
    "mongoose": "^4.5.4",
    "nodemon": "^1.9.2",
    "react": "^15.2.1",
    "react-addons-update": "15.2.1",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.5.2",
    "redux": "3.5.2",
    "redux-thunk": "2.1.0",
    "socket.io": "^1.4.8"
  }
}
